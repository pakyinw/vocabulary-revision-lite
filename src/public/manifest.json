{
    "manifest_version": 3,
  
    "name": "Vocabulary Revision Lite",
    "description": "Store the words with urls for your further revision",
    "version": "1.1",
    "minimum_chrome_version": "92",
    "action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },

    "permissions": [
      "contextMenus",
      "tabs",
      "activeTab",
      "storage"
    ],

    "background": {  
        "service_worker": "./background.js",    
        "type": "module"
    },  
    
    "icons": { 
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }